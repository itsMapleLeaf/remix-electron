{
  "private": true,
  "name": "remix-electron",
  "version": "0.0.0",
  "description": "",
  "license": "",
  "main": "desktop/main.js",
  "scripts": {
    "prepare": "remix setup node",
    "dev": "concurrently 'remix watch' 'cross-env NODE_ENV=development nodemon --watch desktop --ignore desktop/build --exec electron desktop/main.js'",
    "clean": "del-cli desktop/build public/build",
    "build": "npm run clean && remix build && electron-builder",
    "start": "cross-env NODE_ENV=production electron desktop/main.js"
  },
  "build": {
    "files": [
      "desktop",
      "public"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "cross-env": "^7.0.3",
    "mime": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "del-cli": "^4.0.1",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
