{
  "name": "remix-electron",
  "version": "0.2.0",
  "author": "itsMapleLeaf",
  "description": "Electron integration for Remix",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "types": "./dist/main.d.ts",
  "main": "./dist/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup-node src/main.ts --target node16 --format cjs --dts --sourcemap",
    "build-watch": "pnpm build -- --watch",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "run-p --print-label build lint && vitest --no-watch",
    "test-dev": "run-p --print-label --race vitest-ui build-watch",
    "vitest-ui": "vitest --ui",
    "release": "pnpm test && release-it"
  },
  "dependencies": {
    "@types/mime": "^2.0.3",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "mime": "^3.0.0",
    "zod": "^3.11.6"
  },
  "peerDependencies": {
    "@remix-run/dev": ">=1.1.3",
    "@remix-run/node": ">=1.1.3",
    "@remix-run/server-runtime": ">=1.1.3",
    "electron": ">=16",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/node": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vitest/ui": "^0.2.7",
    "electron": "^17.0.0",
    "esbuild": "^0.14.19",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "execa": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.18.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^14.12.4",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vitest": "^0.2.7"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.cache/**",
      "**/.vscode/**",
      "**/integration/fixtures/**"
    ],
    "rules": {
      "import/no-unused-modules": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
