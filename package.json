{
  "name": "remix-electron",
  "version": "2.0.0",
  "author": "itsMapleLeaf",
  "description": "Electron integration for Remix",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "main": "./src/index.cjs",
  "types": "./src/index.d.ts",
  "files": [
    "src/**/*.cjs",
    "src/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "require": "./src/index.cjs"
    }
  },
  "scripts": {
    "lint": "run-s --continue-on-error lint:*",
    "lint:eslint": "eslint . --fix --cache --cache-file=node_modules/.cache/.eslintcache --report-unused-disable-directives",
    "lint:format": "prettier . --write --cache --list-different",
    "lint:types": "tsc -b",
    "lint:knip": "knip",
    "test": "vitest run",
    "test-ui": "vitest --ui",
    "release": "pnpm test && release-it"
  },
  "dependencies": {
    "@remix-run/web-fetch": "^4.4.2",
    "@types/mime": "^3.0.4",
    "@types/node": "^20.10.5",
    "mime": "^4.0.1"
  },
  "peerDependencies": {
    "@remix-run/node": ">=2",
    "electron": ">=27"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "github:itsMapleLeaf/configs",
    "@playwright/test": "^1.40.1",
    "@remix-run/node": "^2.4.0",
    "@vitest/ui": "^1.0.4",
    "electron": "^28.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.0.1",
    "execa": "^8.0.1",
    "knip": "^3.8.2",
    "npm-run-all": "^4.1.5",
    "p-retry": "^6.1.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "release-it": {
    "git": {
      "commitMessage": "v${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "web": true
    }
  }
}
