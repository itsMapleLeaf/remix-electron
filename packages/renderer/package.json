{
  "name": "@remix-electron/renderer",
  "version": "2.0.0-alpha.5",
  "author": "itsMapleLeaf",
  "description": "Electron renderer process library for remix-electron",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "changelog": "https://github.com/itsMapleLeaf/remix-electron/releases",
  "type": "module",
  "exports": "./dist/main.cjs",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/main.ts --clean",
    "watch": "tsup src/main.ts --watch"
  },
  "peerDependencies": {
    "@remix-run/react": ">=1",
    "electron": ">=17",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@remix-electron/common": "*",
    "@remix-run/react": "^1.4.0",
    "@remix-run/server-runtime": "^1.4.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "electron": "^18.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^5.12.5"
  },
  "sideEffects": [
    "src/browser-globals.ts"
  ],
  "tsup": {
    "sourcemap": true,
    "target": "node16",
    "format": [
      "cjs"
    ],
    "dts": true
  },
  "publishConfig": {
    "access": "public"
  }
}
