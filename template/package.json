{
  "name": "remix-electron-template",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "main": "desktop/build/index.js",
  "scripts": {
    "prepare": "remix setup node",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel --print-label --race dev:*",
    "dev:remix": "remix watch",
    "dev:nodemon": "nodemon --watch desktop --ignore desktop/build --exec electron .",
    "build": "remix build && electron-builder",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "build": {
    "files": [
      "desktop",
      "public",
      "remix.config.js"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^1.2.1",
    "@remix-run/react": "^1.2.1",
    "@remix-run/serve": "^1.2.1",
    "@remix-run/server-runtime": "^1.2.1",
    "fast-glob": "^3.2.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.1",
    "remix-electron": "latest"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
