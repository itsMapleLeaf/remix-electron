{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ESNext",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true
	},
	"exclude": ["build", "public/build", "dist", ".cache"]
}
